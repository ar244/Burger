<div class="container">
  <h1>Welcome to Yum Yum Burgers!</h1>

 <div class="row">
  <h2>Burgers waiting to be eaten!</h2>

  <ul>
    {{#each burgers}}
      {{#unless this.devoured}}
        <li>
          {{this.name}}

          <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value=true>
            <button class="btn-default" type="submit">DEVOUR IT!</button>
          </form>
          <br>
          
        </li>
      {{/unless}}
    {{/each}}
  </ul>

 </div>

 <hr>
 </div class="row">
  <h2>Burgers that are devoured!</h2>

  <ul>
    {{#each burgers}}
      {{#if this.devoured}}
        <li>
          {{this.name}}


        </li>
      {{/if}}
    {{/each}}
  </ul>
 </div>

 <hr>
 <div class="row">
  <h2>Add a burger</h2>
  <form class="create-update-form" action="/" method="POST">

    <div class="form-group">
      <label for="ca">Enter Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    

    <button class="btn-default" id="add" type="submit">Add burger</button>
  </form>

</div>

</div>
